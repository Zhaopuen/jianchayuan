/* pages/lawAdvice/lawAdvice.wxss */
.law_advice{
  width:100%;
  height:auto;
  overflow: hidden;
  background:#f8f8f8;
}
.law_advice_serch{
  padding:3%;
  background:#fff;
  height:auto;
  overflow: hidden;
}
.icon-userzixun{
  float:left;
  margin-right:3%;
}
.law_advice_searchbox{
  float:left;
  width:85%;
  height:65rpx;
  border:1px solid #d9d9d9;
  border-radius:4px;
}
.law_advice_searchbox input{
  width:80%;
  float:left;
  padding:0 3%;
  height:65rpx;
  line-height: 65rpx;
  font-size:0.8rem;
  border-right:1px solid #d9d9d9;
}
.searchidcons{
  color:#666;
  font-size:1.2rem;
  text-align: center;
  margin-left:0.5rem;
}
.law_advice_list{
  width:100%;
  height:auto;
  overflow: hidden;
  background: #fff;
  margin:2% 0;
}
.law_advice_list h4{
  display: block;
  font-size: 0.9rem;
  color:#000;
  line-height: 100rpx;
  border-bottom:1px solid #d9d9d9;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  padding:0 3%;
}
.law_advice_list text{
  width:94%;
  height: auto;
  padding:3%;
  font-size: 0.8rem;
  color:#777;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.law_advice_button{
  width:120rpx;
  height:120rpx;
  background:#104904;
  color:#fff;
  border-radius:50%;
  position: absolute;
  bottom:30rpx;
  margin:auto;
  left:0;
  right:0;
}
.law_advice_button icon{
  display: block;
  font-size:1rem;
  text-align: center;
  margin-top:10rpx;
}
.law_advice_button text{
  display: block;
  font-size:0.8rem;
  text-align: center;
}

.jishubox{
  width:100%;
  height:100%;
  background:rgba(0,0,0,.6);
  position: fixed;
}
.jishumid{
  width:80%;
  height:6rem;
  overflow: hidden;
  background:#fff;
  position: absolute;
  border-radius:4px;
  top:-5rem;
  left:0;
  right:0;
  bottom:0;
  margin: auto;
}
.jushu_close{
  width:100%;
  height:auto;
  overflow: hidden;
  text-align: center;
  position: relative;
}
.jushu_close text{
  line-height: 6rem;
  text-align: center;
}
.jishumid icon{
  margin-right: 0;
  position: absolute;
  right:10rpx;
  top:10rpx;
}