/* pages/news/news.wxss */
.news_box{
  width:100%;
  height:auto;
  overflow: hidden;
}
.news_boxlist{
  width:100%;
  height:auto;
  overflow: hidden;
  border-bottom:1px solid #d9d9d9;
}
.news_boxlist image{
  width:150rpx;
  height:150rpx;
  display: block;
  float:left;
  margin-right:15rpx;
  padding:3%;
}
.news_boxlist h4{
  display:block;
  font-size:0.8rem;
  line-height: 50rpx;
  margin-top:20rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.news_boxlist text{
  font-size:0.7rem;
  line-height: 50rpx;
  display:block;
  color:#999;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.news_boxlist p{
  font-size:0.8rem;
}