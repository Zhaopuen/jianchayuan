/* pages/myLawadvice/myLawadvice.wxss */
.my_lawadvice{
  width:100%;
  height:auto;
  overflow: hidden;
  background:#f8f8f8;
}
.swiper-tab{
  width: 100%; 
  border-bottom: 2rpx solid #eeeeee; 
  text-align: center; 
  line-height: 80rpx;
} 
.swiper-tab-item{ 
  font-size: 30rpx; 
  display: inline-block; 
  width: 33.33%; 
  color: #666666; 
} 
.on{ 
  color: #82B954; 
  border-bottom: 5rpx solid #82B954;
} 
.swiper-box{ 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden; 
  } 
.swiper-box view{ 
  text-align: center; 
} 
.law_advice_searchbox{
  float:left;
  width:92%;
  height:65rpx;
  border:1px solid #82B954;
  border-radius:4px;
  margin:4%;
}
.law_advice_searchbox input{
  width:80%;
  float:left;
  padding:0 3%;
  height:65rpx;
  line-height: 65rpx;
  font-size:0.8rem;
  border-right:1px solid #82B954;
  text-align: left;
  color:#82B954;
}
.searchidcons{
  color:#82B954;
  font-size:1.2rem;
  text-align: center;
  margin-left:0.1rem;
}
.law_advice_list{
  width:100%;
  height:auto;
  overflow: hidden;
  background: #fff;
  margin:2% 0;
  
}
.law_advice_list h4{
  display: block;
  font-size: 0.9rem;
  color:#000;
  line-height: 100rpx;
  border-bottom:1px solid #d9d9d9;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  text-align: left;
  padding:0 3%;
}
.law_advice_list text{
  width:94%;
  height: auto;
  padding:3%;
  font-size: 0.8rem;
  color:#777;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align:left;
}
.report{
  width:100%;
  display: block;
  text-align: center;
  font-size:34rpx;
}